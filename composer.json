{
    "name": "iota-php/client",
    "type": "library",
    "description": "IOTA client library implementation in PHP.",
    "keywords": ["iota", "tangle", "ledger", "crypto"],
    "homepage": "https://github.com/iota-php/client",
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin Ansbach",
            "email": "benjaminansbach@gmail.com"
        },
        {
            "name": "Robin Lehrmann",
            "email": "robin.lehrmann@developer.nrw"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "iotaledger/kerl",
                "version": "master",
                "source": {
                    "url": "https://github.com/iotaledger/kerl.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-gmp": "*",
        "psr/container": "^1.0",
        "kornrunner/keccak": "^1.0",
        "php-http/client-implementation": "^1.0",
        "php-http/async-client-implementation": "^1.0",
        "php-http/httplug": "^1.0",
        "php-http/message-factory": "^1.0",
        "php-http/discovery": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "iotaledger/kerl": "dev-master as 1.0",
        "php-http/mock-client": "^1.0",
        "php-http/message": "^1.6",
        "guzzlehttp/psr7": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "IOTA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IOTA\\Tests\\": "tests"
        }
    }
}
